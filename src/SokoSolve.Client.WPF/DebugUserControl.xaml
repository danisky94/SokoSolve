<UserControl x:Class="SokoSolve.Client.WPF.DebugUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SokoSolve.Client.WPF"
             mc:Ignorable="d" 
             Loaded="DebugUserControl_OnLoaded"
             
             d:DesignHeight="1200" d:DesignWidth="1800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        
        <Image Grid.Row="0"  Width="1600" Height="1000" x:Name="img" ></Image>
        <Border Grid.Row="1" Grid.Column="1"  Background="Blue">
            <TextBlock x:Name="txt" Foreground="Yellow"></TextBlock>
        </Border>
        

    </Grid>
</UserControl>
