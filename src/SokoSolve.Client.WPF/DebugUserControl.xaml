<UserControl x:Class="SokoSolve.Client.WPF.DebugUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SokoSolve.Client.WPF"
             mc:Ignorable="d" 
             Loaded="DebugUserControl_OnLoaded"
             KeyDown="DebugUserControl_OnKeyDown"
             PreviewKeyDown="DebugUserControl_OnKeyDown"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        
        <Image Grid.Row="0"  Width="1000" Height="600" x:Name="img"  KeyDown="DebugUserControl_OnKeyDown"></Image>
        <Border Grid.Row="1" Grid.Column="1"  Background="Blue">
            <TextBlock x:Name="txt" Foreground="Yellow"></TextBlock>
        </Border>
        

    </Grid>
</UserControl>
